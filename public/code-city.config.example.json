{
  "$schema": "https://codecity.dev/schema/config.json",
  "version": "1.0",
  "display": {
    "title": "My Awesome Project",
    "description": "A custom description for your code city",
    "readme": {
      "path": "docs/README.md",
      "sections": {
        "exclude": ["installation", "contributing"],
        "include": ["overview", "features", "usage"]
      }
    },
    "optOut": false,
    "redirectToGitHub": false
  },
  "theme": {
    "background": {
      "primary": "#0f172a",
      "secondary": "#1e293b",
      "tertiary": "#334155",
      "hover": "#475569"
    },
    "text": {
      "primary": "#f1f5f9",
      "secondary": "#cbd5e1",
      "tertiary": "#94a3b8",
      "quaternary": "#64748b",
      "error": "#f87171"
    },
    "border": {
      "default": "#334155",
      "hover": "#475569",
      "accent": "#3b82f6"
    },
    "status": {
      "owner": {
        "text": "#fbbf24",
        "background": "rgba(251, 191, 36, 0.2)"
      },
      "maintainer": {
        "text": "#60a5fa",
        "background": "rgba(96, 165, 250, 0.2)"
      },
      "contributor": {
        "text": "#4ade80",
        "background": "rgba(74, 222, 128, 0.2)"
      },
      "default": {
        "text": "#94a3b8",
        "background": "rgba(148, 163, 184, 0.2)"
      }
    },
    "loading": {
      "spinner": "#3b82f6",
      "text": "#cbd5e1"
    },
    "button": {
